var options = {};

<% if @game.errors.any? %>
  options.title = "Error Creating Game";
  options.message = "<%=raw @game.errors.values.join('<br\>') %>";
  options.type = "danger";
<% else %>
  options.title = "Game Successfully Created";
  options.message = "<%=raw @game.errors.values.join('<br\>') %>";
  options.type = "success";
  $('.modal').modal('hide');
  $('#games').prepend("<%= j(render @game) %>");
  Android.showToast("Success created: <%= @game.room_code %>");
<% end %>

notifyUser(options);
